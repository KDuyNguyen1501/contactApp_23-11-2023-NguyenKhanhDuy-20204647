<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thêm liên hệ"
        android:textSize="24dp"
        android:textStyle="bold"
        ></TextView>


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contact_name_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text_input"
        android:hint="Name"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contact_phoneNumber_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text_input"
        android:hint="Phone number"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"></com.google.android.material.textfield.TextInputEditText>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/contact_email_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_text_input"
        android:hint="Email"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="8dp"></com.google.android.material.textfield.TextInputEditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_weight="1"
            android:id="@+id/back_btn_add_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Trở lại"
            android:layout_margin="5dp"></Button>
        <Button
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/confirm_add_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Thêm liên hệ"></Button>
    </LinearLayout>

</LinearLayout>